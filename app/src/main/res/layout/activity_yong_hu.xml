<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.administrator.teamyikezhong.ui.yonghuyemian.YongHuActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/timg" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2">
            <ImageView
                android:id="@+id/imagFan"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:layout_marginTop="10dp"

                android:layout_marginLeft="10dp"

                android:background="@drawable/raw_15000232150"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:text="MC.跨足令"
                android:textSize="20sp"

                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/raw_1499995160"
                />

        </LinearLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/circleImageView"
        android:layout_width="80dp"
        fresco:roundAsCircle="true"
        android:layout_height="90dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="174dp"
        android:background="@drawable/wwww" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:text="粉丝"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="21dp"

        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/circleImageView"
        android:layout_toRightOf="@+id/circleImageView"
        android:text="730235845"
        android:textSize="15sp"
        android:id="@+id/textView" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView"
        android:layout_marginEnd="87dp"
        android:layout_marginRight="180dp"
        android:text="17关注"
        android:textSize="15sp" />

    <Button
        android:id="@+id/buttonGuan"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:button="@null"
        android:drawablePadding="@dimen/heart_anim_length_rand"
        android:gravity="center"
        android:text="+ 关注" />
        <LinearLayout
            android:id="@+id/linearBian"
            android:layout_width="50dp"
            android:layout_height="65dp"
          android:orientation="vertical"
            android:background="#cdcdcd"
            android:layout_marginLeft="60dp"
             android:layout_toRightOf="@+id/buttonGuan"
            android:layout_below="@id/textView2"
            android:layout_marginTop="10dp"

            android:layout_alignWithParentIfMissing="true"
            >


            <ImageView
                android:id="@+id/imageDian"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/dianzan"

                />

            <TextView
                android:id="@+id/dianNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="17"
                android:textSize="15sp" />
        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circleImageView"
        android:layout_marginTop="29dp"
        android:layout_toLeftOf="@+id/button"

        android:text="作品(3)"
        android:textColor="#dd39d1f4"
        android:textSize="20sp"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="13dp"
        android:background="#dad8d8"
        android:id="@+id/view2" ></TextView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
    </ScrollView>

