<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.teamyikezhong.ui.detail.VideosDeailActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


  <LinearLayout


      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_margin="10dp"
      android:layout_height="40dp"

      android:id="@+id/linearLayout">

      <ImageView

          android:id="@+id/fanhui"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginLeft="5dp"
          android:background="@drawable/raw_1500019926"
          />
       <ImageView
           android:id="@+id/imgXin"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:background="@drawable/raw_1499933216"
           android:layout_marginLeft="15dp"
           />
      <ImageView
          android:id="@+id/suiXin"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:background="@drawable/raw_1499933217"
          android:layout_marginLeft="15dp"
          />
      <ImageView
          android:id="@+id/fenXiang"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:background="@drawable/raw_1499995160"
          android:layout_marginLeft="15dp"
          />

      <com.facebook.drawee.view.SimpleDraweeView
          android:id="@+id/detailSimleView"
          android:layout_width="60dp"
          android:layout_height="60dp"

          android:background="@drawable/wwww"
          android:layout_marginLeft="100dp"
          />
  </LinearLayout>
    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/detailVideos"
        android:layout_below="@+id/linearLayout"

        android:layout_width="match_parent"
        android:layout_height="300dp"></fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>

    <TextView
        android:id="@+id/tv_title"
        android:text="女子翻墙"
        android:textSize="20sp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_num"
            android:text="1916"
            android:textSize="15sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView

            android:text="次播放"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView

        android:text="今天"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_time"
            android:text="21.41"
            android:textSize="15sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
 <LinearLayout
     android:layout_below="@+id/tv_time"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:gravity="center"
     android:background="#cdcdcd"
     android:layout_height="400dp">

     <com.facebook.drawee.view.SimpleDraweeView
         android:layout_width="200dp"
         android:layout_height="200dp"
         android:layout_alignLeft="@+id/tv_title"
         android:layout_alignStart="@+id/tv_title"
         android:layout_below="@+id/detailVideos"
         android:layout_marginTop="39dp"
         app:placeholderImage="@drawable/raw_1500033586" />

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:orientation="horizontal"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="20sp"
             android:text="拿起手机速来"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="抢个沙发"
             android:textSize="20sp"
             android:textColor="#50a0e2"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="吧!"
             android:textSize="20sp"
             />
     </LinearLayout>
 </LinearLayout>
        </LinearLayout>

    </ScrollView>

