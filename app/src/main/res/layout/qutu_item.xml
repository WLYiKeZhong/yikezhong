<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rc_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/rc_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="妞妞喝奶" />

            <TextView
                android:id="@+id/rc_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2017-06-21 14:35"
                android:textColor="@android:color/holo_red_dark" />
           <ImageView
               android:layout_marginLeft="90dp"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:background="@drawable/raw_1499934578"
               />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/pb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="天气美美的适合郊游"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <com.example.administrator.teamyikezhong.utils.HearXinLayout
        android:id="@+id/heart_layout"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="270dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/qutuView"
        android:layout_width="450dp"
        android:layout_height="300dp"
        android:layout_weight="9"
        android:background="@mipmap/ic_launcher"

        />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="70dp"
        android:layout_height="280dp"
        android:orientation="vertical"
        >



            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/member_send_good"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"


                    android:background="@drawable/raw1499933215" />






                <ImageView
                    android:id="@+id/member_send_xing"
                    android:layout_width="27dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_horizontal"
                    android:button="@null"
                    android:checked="false"
                    android:layout_marginBottom="10dp"

                    android:background="@drawable/wujiaoxing" />



                <ImageView
                    android:id="@+id/member_send_feixiang"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/raw_1499995160"
                    android:button="@null"
                    android:checked="false"
                    android:layout_marginBottom="10dp"

                    android:layout_gravity="center_horizontal"
                    />



                <ImageView
                    android:id="@+id/member_send_xingxin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/raw_1499933789"
                    android:button="@null"
                    android:checked="false"
                    android:layout_marginBottom="10dp"

                    android:layout_gravity="center_horizontal"
                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#b7b7b7" />
</LinearLayout>